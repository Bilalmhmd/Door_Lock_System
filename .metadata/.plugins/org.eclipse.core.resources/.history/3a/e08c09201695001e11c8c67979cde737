#include "../HAL/lcd.h"
#include "../HAL/keypad.h"
#include "../MCAL/UART.h"
#include "../MCAL/TIMER1.h"
#include <avr/io.h>

/* ========================================================
 * 					* NOTES*
 * 1. Using Switch-statment instead of if-statment give me some of speed and decrease CPU load
 * 2. Enter button -- '='
 * ========================================================*/

/************************************************************************
 * 						Global static variable used in ISR timer1
 **************************************************************************/
static volatile uint8 g_tick =0;

void main(void)
{
	SREG|=(1<<7);	/* Enable i-bit*/

	/***********************************************
	 * 				UART Configurations
	 * 1.Even Parity
	 * 2.stop bit --onebit
	 * 3.8 bits Data
	 * 4.Baudrate= 9600
	 ***********************************************/
	UART_ConfigType configurations = { Even, OneBit , Bit_8 , 9600 };
	UART_init( &configurations);

	uint8 pass = 0;
	/* Initialize the LCD */
	LCD_init();
	LCD_displayString("Plz enter Pass: ");
	LCD_moveCursor(1, 0); /* Move the cursor to the next line*/

	while(1)
	{
		if(KEYPAD_getPressedKey() == pass)
		{

		}
	}

}
